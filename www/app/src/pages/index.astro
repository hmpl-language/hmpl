---
  import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
---
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  :global(.right-sidebar-container) {
    display: none !important;
  }
  :global(.content-panel:first-child) {
    display: none !important;
  }
  :global(.content-panel) {
    padding: 0 !important;
    margin: 0 !important;
  }
  :global(.sl-container) {
    max-width: unset !important;
  }
  :global(footer.sl-flex) {
    display: none !important;
  }
  :global(main) {
    padding: 0;
    margin: 0;
  }
  :global(.main-frame) {
    padding: 0 !important;
    margin: 0 !important;
  }
</style>

<StarlightPage frontmatter={{ title: 'HMPL.js' }} hasSidebar={false}>
  <div id="app"></div>
</StarlightPage>

<script>
  import { createApp } from 'vue'
  import LandingPage from '../components/HomePage.vue'

  createApp(LandingPage).mount('#app')
</script>